{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Transpiling with TypeScript for Node.js */
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    /* Building for a library */
    "declaration": true,
    "declarationMap": true,

    /* Library does not run in the DOM */
    "lib": ["es2022"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
